<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.servicelinereport.ServiceLineReportFragment"
    android:background="@color/gray_layout_bg"
    android:padding="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_56sdp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ll_crew_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/crew_leader"
                android:textColorHint="@color/color_hint"
                app:helperText="Crew leader is must"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/color_registration_edit_text_border"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_et_crew_leader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/header_text_color"
                    android:textColorHint="@color/color_hint"
                    android:textColorHighlight="@color/color_error_red"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:helperText="Please select date first"
                android:textColorHint="@color/color_hint"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/color_registration_edit_text_border"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_text_color"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColorHint="@color/color_hint"
                    android:textColorHighlight="@color/color_error_red"
                    android:drawableEnd="@drawable/ic_date"
                    android:drawableRight="@drawable/ic_date" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ll_work_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/work_address"
                android:textColorHint="@color/color_hint"
                app:helperText="Work Address is must"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/color_registration_edit_text_border"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_et_work_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_text_color"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="text|textPostalAddress"
                    android:textColorHint="@color/color_hint"
                    android:textColorHighlight="@color/color_error_red"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ll_work_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/work_order_number"
                android:textColorHint="@color/color_hint"
                app:helperText="Work Order Number is must"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/color_registration_edit_text_border"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_et_work_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_text_color"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColorHint="@color/color_hint"
                    android:textColorHighlight="@color/color_error_red"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ll_enter_town"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/work_order_number"
                android:textColorHint="@color/color_hint"
                app:helperText="Please enter town"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/color_registration_edit_text_border"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_et_enter_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_text_color"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColorHint="@color/color_hint"
                    android:textColorHighlight="@color/color_error_red"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_restoration_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restoration_type"
                android:textColor="@color/header_text_color"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:layout_marginTop="@dimen/_8sdp"
                />
            <LinearLayout
                android:id="@+id/ll_restoration_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:background="@drawable/custom_edit_text_box_bg"
                >

                <RadioGroup
                    android:id="@+id/radioGroup_restoration_type_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_weight="1.5"
                    >
                    <RadioButton
                        android:id="@+id/rb_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/grass"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RadioButton
                        android:id="@+id/rb_concrete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/concrete" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup_restoration_type_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    >

                    <RadioButton
                        android:id="@+id/rb_asphalt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/asphalt"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RadioButton
                        android:id="@+id/rb_others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/others"
                        android:textSize="@dimen/_11sdp"
                        />
                </RadioGroup>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_ll_restoration_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/others"
                android:textColorHint="@color/color_hint"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/color_registration_edit_text_border"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                android:layout_marginTop="@dimen/_8sdp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_et_restoration_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_text_color"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColorHint="@color/color_hint"
                    android:textColorHighlight="@color/color_error_red"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_suez_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suez_side"
                android:textColor="@color/header_text_color"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:layout_marginTop="@dimen/_8sdp"
                />
            <LinearLayout
                android:id="@+id/ll_suez_side"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:background="@drawable/custom_edit_text_box_bg"
                >

                <RadioGroup
                    android:id="@+id/radioGroup_suez_side_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_weight="1.5"
                    >
                    <RadioButton
                        android:id="@+id/rb_gz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/gz"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RadioButton
                        android:id="@+id/rb_br"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/br" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup_suez_side_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    >

                    <RadioButton
                        android:id="@+id/rb_lz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/lz"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RadioButton
                        android:id="@+id/rb_cp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/cp"
                        android:textSize="@dimen/_11sdp"
                        />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_customer_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_material_type_customer_side"
                android:textColor="@color/header_text_color"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:layout_marginTop="@dimen/_16sdp"
                />
            <LinearLayout
                android:id="@+id/ll_customer_side"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:background="@drawable/custom_edit_text_box_bg"
                >

                <RadioGroup
                    android:id="@+id/radioGroup_customer_side_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_weight="1.5"
                    >
                    <RadioButton
                        android:id="@+id/rb_gz_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/gz"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RadioButton
                        android:id="@+id/rb_br_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/br" />
                    <RadioButton
                        android:id="@+id/rb_unknown_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/unknown" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup_customer_side_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    >

                    <RadioButton
                        android:id="@+id/rb_lz_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/lz"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RadioButton
                        android:id="@+id/rb_cp_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/header_text_color"
                        android:fontFamily="@font/helvetica_neue_regular"
                        android:text="@string/cp"
                        android:textSize="@dimen/_11sdp"
                        />
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/bt_nxt"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_48sdp"
                android:layout_marginBottom="@dimen/_52sdp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:fontFamily="@font/helvetica_neue_medium"
                android:background="@drawable/submit_button"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>