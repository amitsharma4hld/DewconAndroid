<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.policebackup.PoliceBackupFragment"
    android:background="@color/gray_layout_bg"
    android:padding="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_56sdp"
    >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_ll_crew_leader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/crew_leader"
            android:textColorHint="@color/color_hint"
            app:helperText="Crew leader is must"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:boxStrokeColor="@color/color_registration_edit_text_border"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:theme="@style/EditTextThemeOverlay"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_et_crew_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/header_text_color"
                android:textColorHint="@color/color_hint"
                android:textColorHighlight="@color/color_error_red"
                />

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:helperText="Please select date first"
        android:textColorHint="@color/color_hint"
        app:helperTextTextAppearance="@style/HelperTextAppearance"
        app:boxStrokeColor="@color/color_registration_edit_text_border"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColorHint="@color/color_hint"
            android:textColorHighlight="@color/color_error_red"
            android:drawableEnd="@drawable/ic_date"
            android:drawableRight="@drawable/ic_date" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_ll_work_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/work_address"
        android:textColorHint="@color/color_hint"
        app:helperText="Work Address is must"
        app:helperTextTextAppearance="@style/HelperTextAppearance"
        app:boxStrokeColor="@color/color_registration_edit_text_border"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_et_work_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/color_hint"
            android:textColorHighlight="@color/color_error_red"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_ll_work_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/work_order_number"
        android:textColorHint="@color/color_hint"
        app:helperText="Work Order Number is must"
        app:helperTextTextAppearance="@style/HelperTextAppearance"
        app:boxStrokeColor="@color/color_registration_edit_text_border"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_et_work_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/color_hint"
            android:textColorHighlight="@color/color_error_red"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_ll_officer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/officer_name"
        android:textColorHint="@color/color_hint"
        app:helperText="Officer name is must"
        app:helperTextTextAppearance="@style/HelperTextAppearance"
        app:boxStrokeColor="@color/color_registration_edit_text_border"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_et_officer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/color_hint"
            android:textColorHighlight="@color/color_error_red"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_ll_police_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/police_department"
        android:textColorHint="@color/color_hint"
        app:helperText="Police department is must"
        app:helperTextTextAppearance="@style/HelperTextAppearance"
        app:boxStrokeColor="@color/color_registration_edit_text_border"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_et_police_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/color_hint"
            android:textColorHighlight="@color/color_error_red"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_ll_hours_worked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hours_worked"
        android:textColorHint="@color/color_hint"
        app:helperText="Hours worked is must"
        app:helperTextTextAppearance="@style/HelperTextAppearance"
        app:boxStrokeColor="@color/color_registration_edit_text_border"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_et_hours_worked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/color_hint"
            android:textColorHighlight="@color/color_error_red"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_police_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/police_car_used"
        android:textColor="@color/header_text_color"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/helvetica_neue_regular"
        android:layout_marginTop="@dimen/_8sdp"
        />
    <RelativeLayout
        android:id="@+id/ll_police_car_used_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_text_box_bg"
        android:visibility="visible"
        >

        <RadioGroup
            android:id="@+id/radioGroup_police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingStart="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            >
            <RadioButton
                android:id="@+id/radioBtn1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_color"
                android:fontFamily="@font/helvetica_neue_regular"
                android:text="@string/yes" />
            <RadioButton
                android:id="@+id/radioBtn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/header_text_color"
                android:fontFamily="@font/helvetica_neue_regular"
                android:text="@string/no" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_police_sheet_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_28sdp"
        >
        <ImageView
            android:id="@+id/iv_upload_police_sheet_image_one"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:fontFamily="@font/helvetica_neue_regular"
            android:text="@string/upload_police_backup_sheet_image"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp" />

        <ImageView
            android:id="@+id/iv_status_police_sheet_image_one"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:visibility="gone"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_police_sheet_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_18sdp"
        >

        <ImageView
            android:id="@+id/iv_upload_police_sheet_image_two"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:fontFamily="@font/helvetica_neue_regular"
            android:text="@string/upload_police_backup_sheet_image_optional"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp" />

        <ImageView
            android:id="@+id/iv_status_police_sheet_image_two"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_police_sheet_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_18sdp"
        >

        <ImageView
            android:id="@+id/iv_upload_police_sheet_image_three"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header_text_color"
            android:fontFamily="@font/helvetica_neue_regular"
            android:text="@string/upload_police_backup_sheet_image_optional"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp" />

        <ImageView
            android:id="@+id/iv_status_police_sheet_image_three"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:visibility="gone"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginBottom="@dimen/_52sdp"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:fontFamily="@font/helvetica_neue_medium"
        android:background="@drawable/submit_button"
        />

</LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone"
        />
</FrameLayout>