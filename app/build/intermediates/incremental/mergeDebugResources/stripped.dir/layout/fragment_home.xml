<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_layout_bg"
    tools:context=".ui.fragments.HomeFragment"
    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motion_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/scrollable_header_above_recycler_view_scene"
            >
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                android:gravity="center_vertical"
                >

                <RelativeLayout
                    android:id="@+id/below_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    tools:ignore="ContentDescription">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_43sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:src="@drawable/logo" />

                    <ImageView
                        android:id="@+id/iv_app_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:src="@drawable/ic_settings" />

                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/below_header"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                >

                <TextView
                    android:id="@+id/tv_lets_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lets_find"
                    android:textColor="@color/header_text_color"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/helvetica_neue_bold"
                    android:layout_marginTop="@dimen/_28sdp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/et_autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_11sdp"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:hint="@string/search_work"
                    android:textColor="@color/color_menu_name"
                    android:textColorHint="@color/color_hint"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_search"
                    android:layout_below="@+id/tv_lets_find"
                    android:drawableLeft="@drawable/ic_search"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:fontFamily="@font/helvetica_neue_regular"
                    android:background="@drawable/custom_edit_text_box_bg"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/overlapImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_above="@id/sub_header"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-70dp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_find"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_18sdp" />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottom_to_header"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:background="@color/gray_layout_bg"
                >

                <TextView
                    android:id="@+id/tv_submit_report_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:text="@string/submit_report"
                    android:textColor="@color/header_text_color"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_prental_visit_record"
                    tools:listitem="@layout/home_menu_grid_item"
                    android:visibility="visible"
                    android:overScrollMode="never"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_below="@+id/tv_submit_report_title"

                    />
            </RelativeLayout>


        </androidx.constraintlayout.motion.widget.MotionLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
